@model IEnumerable<AirnetMVC.DataService.Recharge>

@{
    ViewBag.Title = "ViewRecharges";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>ViewRecharges</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Plans.PlanPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plans.PlanName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plans.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RechargeTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Plans.PlanPrice)
        </td>
        <th>
            @Html.DisplayFor(model => item.Plans.PlanName)
        </th>
        <th>
            @Html.DisplayFor(model => item.Plans.Data)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RechargeTime)
        </td>
    </tr>
}

</table>
