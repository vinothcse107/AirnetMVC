@model IEnumerable<AirnetMVC.DataService.Review>

<div class="justify-content-center"></div>
@{ 

    if(!Model.Any(a => Session["username"].ToString().Equals(a.Username)))
    {
        <button class="btn btn-secondary text-white">@Html.ActionLink("Create", "AddReview" , new {PlanId = ViewBag.PlanId })</button>
    }

}
@foreach (var item in Model)
{
    <div class="card w-100">
        <div class="card-body">
            <h5 class="card-title">@item.Username</h5>
            <p class="card-text">@item.ReviewContent</p>
            <h5>
                @for (int i = 0; i < @item.ReviewRating; i++)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                    </svg>
                }
            </h5>

            @if (Session["username"].ToString().Equals( item.Username))
            {
                <button class="btn btn-secondary text-white">@Html.ActionLink("Edit", "EditReviewPartialView", new { User = Session["username"] , Plan = item.PlanId })</button>
                <button class="btn btn-danger text-white">@Html.ActionLink("Delete", "DeleteReview", new { User = Session["username"], Plan = item.PlanId }) </button>
            }


        </div>
    </div>
    <br />


}
